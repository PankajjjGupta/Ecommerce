<!-- Slider main container -->
<div class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper display-flex align-items-center">
      <!-- Slides -->

      <% CarouselProducts.map(el => { %>
        <div class="swiper-slide display-flex align-items-center" style="justify-content: space-evenly;">
          <div class="swiper_information">
              <!-- Cutting Edge <br> <b>Technology Store</b> -->
              <%- el.title %>
              <p><%= el.description %></p>
              <a href="">Shop Now</a>
          </div>
          <img src="<%= el.image %>" alt="">
        </div>
     <% }) %>
        
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>
  
    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  
    <!-- If we need scrollbar -->
    <div class="swiper-scrollbar"></div>
  </div>
